<!-- https://github.com/tylergannon/toastr-rails -->

<!-- message en boucle pour les afficher 1 par 1 : each do -->

<% unless flash.empty? %>
    <script type="text/javascript">
        <% flash.each do |f| %>
        <% type= f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
        toastr['<%= type %>']('<%= f[1] %>')
        <% end %>
    </script>
    
<% end %>